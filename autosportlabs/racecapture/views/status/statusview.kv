#:kivy 1.9.1

<StatusLabel>:
    canvas.before:
        Color:
            rgba: self.backgroundColor
        Rectangle:
            pos: self.pos
            size: self.size
    padding_x: dp(10)

<StatusTitle>:
    font_size: self.height * 0.5
    size_hint_x: 0.8

<StatusValue>:
    font_size: self.height * 0.40

<StatusView>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            TreeView:
                size_hint_y: 0.9
                id: menu
                hide_root: True
                indent_level: 0
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.8
            HSeparator:
                text: 'Waiting for Data'
                id: name
                size_hint_x: 1
                size_hint_y: 0.1
            ScrollContainer:
                id: scroller
                size_hint_y: 0.9
                do_scroll_x:False
                do_scroll_y:True
                GridLayout:
                    id: status_grid
                    row_default_height: root.height * 0.12
                    row_force_default: True
                    size_hint_y: None
                    height: max(self.minimum_height, scroller.height)                                      
                    cols: 2

<ApplicationLogView>:
    orientation: 'horizontal'
    padding: (0, sp(5))
    LabelIconButton:
        size_hint_x: (.3)
        title_font_size: self.height * 0.5
        title: 'Copy'
        icon: u'\uf0c5'
        on_press: root.copy_app_log()
    BoxLayout:
        size_hint_x: (0.7)
