#:kivy 1.9.1


<TelemetryConfigView>:
	spacing: dp(20)
	orientation: 'vertical'
	HSeparator:
		size_hint_y: 0.05
		text: 'Telemetry Configuration'
		halign: 'left'
	SettingsView:
		rcid: 'deviceId'
		id: device_id
		size_hint_y: 0.2
		label_text: 'Telemetry Device Id'
		help_text: 'Enter the telemetry Device Id provided by race-capture.com'
		
	HLineSeparator:
		size_hint_y: 0.05
		
	SettingsView:
		size_hint_y: 0.2
		rcid: 'bgStream'
		label_text: 'Background Streaming'
		help_text: 'Stream real-time telemetry continuously in the background'
	HelpLabel:
		size_hint_y: 0.1
		text: 'When disabled, telemetry is synchronized with SD logging.'
		halign: 'left'
	
