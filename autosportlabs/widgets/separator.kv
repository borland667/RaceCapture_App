#:kivy 1.9.1

[VSeparator@Widget]:
    size_hint_x: None
    width: dp(10)
    canvas:
        Color:
            rgba: .8, .8, .8, .3
        Rectangle:
            size: 1, self.height
            pos: self.center_x, self.y

[HLineSeparator@Widget]:
    size_hint_x: 1.0
    size_hint_y: None
    height: dp(5)
    canvas:
        Color:
            rgba: .8, .8, .8, .3
        Rectangle:
            size: self.width, dp(1)
            pos: self.x, self.center_y

[HSeparator@Label]:
    size_hint_y: None
    height: max(dp(30), self.texture_size[1])
    text: ctx.text if 'text' in ctx else ''
    text_size: self.width, None
    valign: 'middle'
    halign: 'center'
    font_size: sp(20)
    canvas.before:
        Color:
            rgba: .21, .75, .95, .6
        Rectangle:
            size: self.size
            pos: self.pos

[HSeparatorMinor@Label]:
	size_hint_y: None
    height: max(dp(30), self.texture_size[1])
    text: ctx.text if 'text' in ctx else ''
    text_size: self.width, None
    valign: 'middle'
    halign: 'center'
    font_size: sp(16)
    canvas.before:
        Color:
            rgba: .1, .1, .1, .9
        Rectangle:
            size: self.size
            pos: self.pos
